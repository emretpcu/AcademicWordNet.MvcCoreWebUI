<div class="col-md-3">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Mesajlar</h3>

			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<div class="card-body p-0">
			<ul class="nav nav-pills flex-column">
				<li class="nav-item active">
					<a href="/message/" class="nav-link">
						<i class="fas fa-inbox"></i> Gelen Kutusu
						@*                            <span class="badge bg-primary float-right">12</span>
						*@
					</a>
				</li>
				<li class="nav-item">
					<a href="/message/sent/" class="nav-link">
						<i class="far fa-envelope"></i> Gönderdiklerin
					</a>
				</li>
			</ul>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->
</div>
<div class="col-md-5" style="margin-top:5%">
	<div class="card card-primary card-outline">
		<div class="card-header">
			@if (Model.IsSendBox == false)
			{
				<h3 class="card-title">Gelen Kutusu</h3>
			}
			else
			{
				<h3 class="card-title">Gönderdiklerin</h3>

			}
<div class="card-tools">
				<div class="input-group input-group-sm">
		<input type="text" class="form-control" placeholder="Mesaj Ara">
				<div class="input-group-append">
			<div class="btn btn-primary">
				<i class="fas fa-search"></i>
			</div>
		</div>
	</div>
</div>
<!-- /.card-tools -->
</div>
<!-- /.card-header -->
<div class="card-body p-0">
	<div class="table-responsive mailbox-messages">
		<table class="table table-hover table-striped">
			<tbody>
						@foreach (var message in Model.Messages)
						{
						<tr>
							<td>
								<div class="icheck-primary">
									<input type="checkbox" value="" id="check1">
									<label for="check1"></label>
								</div>
							</td>
								@if (Model.IsSendBox == false)
								{
									<td class="mailbox-name"><a href="/message/read/@message.Id">@message.Sender.UserName</a></td>
								}
								else
								{
									<td class="mailbox-name"><a href="/message/getmessage/@message.Id">@message.Receiver.UserName</a></td>
								}
								@if (@message.Text.ToString().Length > 20)
								{

									string text = message.Text.ToString().Substring(0, 20);
									<td class="mailbox-subject">@text..</td>
								}
								else
								{
									<td class="mailbox-subject">
										@message.Text
									</td>
								}


							<td class="mailbox-attachment"></td>
							<td class="mailbox-date">@message.CreatedAt.ToString("MM.dd.yyyy HH:mm")</td>
						</tr>
						}
			</tbody>
		</table>
		<!-- /.table -->
	</div>
	<!-- /.mail-box-messages -->
</div>
<!-- /.card-body -->
<div class="card-footer p-0">
	<div class="mailbox-controls">
		<div class="float-right">
			1-50/200
			<div class="btn-group">
				<button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></button>
				<button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></button>
			</div>
			<!-- /.btn-group -->
		</div>
		<!-- /.float-right -->
			</div>
		</div>
	</div>	<!-- /.card -->
</div>